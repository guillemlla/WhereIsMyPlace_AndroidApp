<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.fragmentsPlantes.FragmentPlanta1"
    android:orientation="vertical">>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp">

            <TextView
                android:text="Planta 1:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TVPlanta1"
                android:textStyle="normal|bold"
                android:textSize="30sp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ToggleButton
                    android:text="ToggleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tbTaules"
                    android:layout_weight="1"
                    android:layout_marginRight="16dp"
                    android:textOff="Taules"
                    android:textOn="Taules" />

                <ToggleButton
                    android:text="ToggleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tbCadires"
                    android:layout_weight="1"
                    android:textOff="Cadires"
                    android:textOn="Cadires" />
            </LinearLayout>

            <lecho.lib.hellocharts.view.PieChartView
                android:id="@+id/chartP1"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:text="Taules totals: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TVP1Total"
                android:layout_marginTop="16dp"
                android:textSize="24sp" />

            <TextView
                android:text="Taules lliures:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TVP1Lliures"
                android:layout_marginTop="16dp"
                android:textSize="24sp" />

            <TextView
                android:text="Taules ocupades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TVP1Ocupades"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textSize="24sp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
